= form_for @image do |f|
  - if @image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - @image.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :id
    = f.number_field :id
  .field
    = f.label :fname
    = f.text_field :fname
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :parent
    = f.text_field :parent
  .field
    = f.label :private
    = f.check_box :private
  .field
    = f.label :date
    = f.text_field :date
  .actions
    = f.submit 'Save'
